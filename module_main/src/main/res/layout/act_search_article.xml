<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/topbar" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="60px"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:background="@drawable/main_white_30"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/ed_text_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/main_search"
                android:drawablePadding="14px"
                android:paddingLeft="30px"
                android:hint="请输入文章名字"
                android:imeOptions="actionSearch"
                android:background="@null"
                android:textColor="@color/text_888"
                android:textSize="28px" />


        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>



    <include layout="@layout/fragment_twitter_recycler"/>



</LinearLayout>