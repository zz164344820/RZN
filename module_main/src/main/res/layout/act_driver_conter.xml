<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="#3234"
                    android:orientation="horizontal">

                    <!--android:background="@drawable/logo"-->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_photo"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/logo" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="王万水"
                                android:textColor="#ffffff"
                                android:textSize="18dp" />

                            <ImageView
                                android:id="@+id/iv_sex"
                                android:layout_width="16dp"
                                android:layout_height="18dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/icon_sex_boy" />


                            <ImageView
                                android:id="@+id/iv_setting"
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:layout_marginLeft="90dp"
                                android:src="@drawable/icon_setting_white" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="从业7年    70后"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_wei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/ll_driver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_name"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RatingBar
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:progressTint="#fb9300"
                                android:rating="5"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/iv_view"
                                android:text="五星机手"
                                android:textColor="#ffffff"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="从业70年，绝对老司机"
                            android:textColor="#ffffff"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/iv_finish"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/top_goback" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="机手中心"
                        android:textColor="#ffffffff"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/iv_heart"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/rl_title"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rl_one"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon_hui">

                        <TextView
                            android:id="@+id/tv_text_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="累计作业亩数"
                            android:textColor="#ffffffff"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/iv_one"
                            android:layout_width="85dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/tv_text_num"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/icon_driver_one" />

                        <TextView
                            android:id="@+id/tv_number_mu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_one"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:text="0亩"
                            android:textColor="#ffffffff"
                            android:textSize="30dp" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rl_two"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon_hui">

                        <ImageView
                            android:id="@+id/iv_eye"
                            android:layout_width="20dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/icon_eye" />

                        <ImageView
                            android:id="@+id/iv_eyes"
                            android:layout_width="20dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/icon_eyes"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/tv_text_have"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="累计收益"
                            android:textColor="#ffffffff"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/iv_two"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_below="@+id/tv_text_have"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/icon_driver_two" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_two"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:text="0.0元"
                            android:textColor="#ffffffff"
                            android:textSize="30dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rl_three"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon_hui">

                        <ImageView
                            android:id="@+id/iv_three"
                            android:layout_width="73dp"
                            android:layout_height="59dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="45dp"
                            android:src="@drawable/icon_driver_three" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_three"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="待作业"
                            android:textColor="#ffffffff"
                            android:textSize="18dp" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rl_four"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon_hui">

                        <ImageView
                            android:id="@+id/iv_four"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="46dp"
                            android:src="@drawable/icon_driver_four" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_four"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="17dp"
                            android:text="我的作业订单"
                            android:textColor="#ffffffff"
                            android:textSize="18dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>