<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:id="@+id/tv_main_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8px"
            android:drawableRight="@drawable/main_xiala"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="140px"
            android:text="老王村"
            android:textColor="@color/white"
            android:textSize="36px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="60px"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:background="@drawable/main_white_30"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/main_search"
                android:drawablePadding="14px"
                android:paddingLeft="30px"
                android:text="搜索"
                android:textColor="@color/text_888"
                android:textSize="28px" />


        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25px"

            android:src="@drawable/main_xiaoxi" />

    </com.zhy.autolayout.AutoLinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





            <com.tmall.ultraviewpager.UltraViewPager
                android:id="@+id/ultra_viewpager"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_centerInParent="true"
                android:background="@android:color/darker_gray" />


            <LinearLayout
                android:id="@+id/ll_weather_new"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="50dp"
                    android:background="@drawable/icon_background_weather"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="18dp"
                        android:layout_centerVertical="true"
                        >
                       <TextView
                           android:id="@+id/tv_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="晴间多云"
                            android:textSize="14dp"
                            android:textColor="#ffffff"
                            />
                        <TextView
                            android:id="@+id/tv_water"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="晴间多云"
                            android:textSize="14dp"
                            android:textColor="#ffffff"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:id="@+id/tv_now_du"
                            android:textColor="#ffffff"
                            android:textSize="30dp"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="℃"
                                android:textColor="#ffffff"
                                />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_du"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3~15°c"
                            android:textSize="12dp"
                            android:layout_marginLeft="-7dp"
                            android:textColor="#ffffff"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:id="@+id/tv_day_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="晴间多云"
                            android:textSize="14dp"
                            android:textColor="#ffffff"
                            />
                        <TextView
                            android:id="@+id/tv_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="晴间多云"
                            android:textSize="14dp"
                            android:textColor="#ffffff"
                            />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:id="@+id/tv_main_nongjitong"
                    style="@style/main_moduleTextStyle"
                    android:drawableTop="@drawable/main_nongjitong"
                    android:text="农机通" />

                <TextView
                    android:id="@+id/tv_main_weixiuzhan"
                    style="@style/main_moduleTextStyle"
                    android:drawableTop="@drawable/main_weixiuzhan"
                    android:text="维修站" />

                <TextView
                    android:id="@+id/tv_main_wenzhuanjia"
                    style="@style/main_moduleTextStyle"
                    android:drawableTop="@drawable/main_wenzhuanjia"
                    android:text="问专家" />

                <TextView
                    android:id="@+id/tv_main_mainnonghuo"
                    style="@style/main_moduleTextStyle"
                    android:drawableTop="@drawable/mian_mainonghuo"
                    android:text="卖农货" />
            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:paddingRight="20px">

                <TextView
                    android:id="@+id/tv_main_mesage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/main_guangbo"
                    android:drawablePadding="19px"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="28px" />

                <com.sunfusheng.marqueeview.MarqueeView
                    android:id="@+id/marqueeView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:mvAnimDuration="1000"
                    app:mvDirection="bottom_to_top"
                    app:mvInterval="5000"
                    app:mvSingleLine="true"
                    app:mvTextColor="#333333"
                    app:mvTextSize="14sp" />


                <TextView
                    android:id="@+id/tv_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/right_enter"
                    android:text="立即查看"
                    android:textColor="#888888"
                    android:textSize="28px" />

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"

                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:paddingRight="20px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/main_zixun"
                    android:drawablePadding="19px"
                    android:text="农业资讯"
                    android:textColor="#333333"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/tv_zixunMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/right_enter"
                    android:text="立即查看"
                    android:textColor="#888888"
                    android:textSize="28px" />

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/al_item_one"
                android:layout_width="match_parent"
                android:layout_height="280px"
                android:layout_marginTop="2px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:paddingRight="20px">

                <ImageView
                    android:id="@+id/iv_zixun"
                    android:layout_width="250px"
                    android:layout_height="220px"
                    android:background="@drawable/iv_zxun"
                    android:scaleType="centerCrop" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_zixunTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="200名甘肃农机手组团提机 再踏三夏掘金路"
                        android:textColor="@color/text_333"
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/tv_zixunConent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="5月15日,“2018年雷沃谷神甘肃用户批量交机暨雷沃三夏全程智能服务启动仪式”在雷沃重工潍坊厂区举行。"
                        android:textColor="@color/text_333"
                        android:textSize="32px" />

                    <TextView
                        android:id="@+id/tv_zixunTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="2018-05-26 10:08" />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginTop="20px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:paddingRight="20px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/main_wenzhang"
                    android:drawablePadding="19px"
                    android:text="热门文章"
                    android:textColor="#333333"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/tv_wenzhangMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:drawableRight="@drawable/right_enter"
                    android:text="立即查看"
                    android:textColor="#888888"
                    android:textSize="28px" />

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/al_item_two"
                android:layout_width="match_parent"
                android:layout_height="280px"
                android:layout_marginTop="2px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:paddingRight="20px">

                <ImageView
                    android:id="@+id/tv_wenzhang"
                    android:layout_width="250px"
                    android:layout_height="220px"
                    android:background="@drawable/iv_wenzhang"
                    android:scaleType="centerCrop" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_farmertitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="今年国家粮食最低价怎么收？咱们农民要注意啥？"
                        android:textColor="@color/text_333"
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/tv_farmercontent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="5月19日国家发改委等6部门颁发了《小麦和稻谷最低收购价执行预案》，作为国家政策执行主体，中储粮总公司积极部署夏粮收购工作，让农民舒心卖粮、放心卖粮、满意卖粮。"
                        android:textColor="@color/text_333"
                        android:textSize="32px" />

                    <TextView
                        android:id="@+id/tv_farmertime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="2018-05-31  11:12" />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>


</com.zhy.autolayout.AutoLinearLayout>