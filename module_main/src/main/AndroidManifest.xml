<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    package="com.rzn.module_main">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".ui.welcome.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.main.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.jobscreening.JobScreeningActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"
            android:launchMode="singleTask" />

        <activity android:name=".ui.myadvice.MyAdviceActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"
            />
        <activity android:name=".ui.driverhome.DriverHomeActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"
            />
        <activity android:name=".ui.setting.SettingActivity" />
        <activity android:name=".ui.keepstation.KeepStationActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"
            />
        <activity android:name=".ui.personalinfo.PersonalInfoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"
            />
        <activity android:name=".ui.drivercenter.DriverCenterActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"
            />
        <activity android:name=".ui.settingmode.SettingModeActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"
            />
        <activity android:name=".ui.mesagecenter.MessageCenterActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"
            />
        <activity android:name=".ui.sellagriculturalgoods.SellAgriculturalGoodsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden"
            />
        <activity android:name=".ui.webview.WebViewActivity" />
    </application>

</manifest>
