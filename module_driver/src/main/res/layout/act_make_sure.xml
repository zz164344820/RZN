<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/topbar" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/icon_auditing" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            android:text="认证通过后才可以接单哦！"
            android:textColor="#333333"
            android:textSize="18dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            android:text="我的-手机中心"
            android:textColor="#70c63f"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            android:text="中可查看审核进度~"
            android:textColor="#333333"
            android:textSize="18dp"
            />
        </LinearLayout>
    </LinearLayout>
    
    
    
    <TextView
        android:id="@+id/tv_custom_service"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="联系客服"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/selector_driver_order_message"
        />


</RelativeLayout>