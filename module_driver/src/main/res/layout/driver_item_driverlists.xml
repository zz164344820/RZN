<?xml  version="1.0"  encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <!--顶部布局-->
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--左边头像和姓名布局-->
        <LinearLayout
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_header_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp"
                android:background="@drawable/logo"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8.5dp"
                android:text="韩梅梅"
                android:textColor="#333333"
                android:textSize="18dp"
                />

        </LinearLayout>

        <!--右边信息布局-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_name_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.5dp"
                    android:text="水稻-联合整地"
                    android:textColor="#333333"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_name_product"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="据您1.2公里"
                    android:textColor="#888888"
                    android:textSize="16dp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name_scope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.5dp"
                android:text="12亩/集中连片"
                android:textColor="#333333"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作业地点：任丘市青塔乡老王村 "
                android:textColor="#333333"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="作业时间：2018-02-12"
                android:textColor="#333333"
                android:textSize="16dp"
                />
        </LinearLayout>

    </LinearLayout>
    <!--分界线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_alignBottom="@+id/ll_top"
        android:background="#DDDDDD"
        />
    <!--底部布局-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        >

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="480.00元"
            android:textColor="#ff5050"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/tv_money_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_money"
            android:text="(40元/亩)"
            android:textColor="#888888"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/tv_get_post"
            android:layout_width="91.5dp"
            android:layout_height="31.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/driver_shape_background"
            android:gravity="center"
            android:text="抢单"
            android:textColor="#ffffff"
            android:textSize="16dp"
            />
    </RelativeLayout>
</LinearLayout>