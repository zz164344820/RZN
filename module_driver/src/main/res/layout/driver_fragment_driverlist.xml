<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginBottom="16px"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_jobScreeningType"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="作业类型"
                android:textColor="@color/text_333"
                android:textSize="36px"
                android:drawableRight="@drawable/driver_pulldown_black"
                android:drawablePadding="7px"
                android:gravity="center"
                />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="4px"
            android:layout_height="match_parent"
            android:layout_marginTop="11px"
            android:layout_marginBottom="11px"
            android:background="#dddddd"
            />


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_jobScreeningRegion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="作业地区"
                android:textColor="@color/text_333"
                android:textSize="36px"
                android:drawableRight="@drawable/driver_pulldown_black"
                android:drawablePadding="7px"
                android:gravity="center"
                />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_driverList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        />

</com.zhy.autolayout.AutoLinearLayout>