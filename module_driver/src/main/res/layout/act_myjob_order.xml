<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/topbar" />

    <com.rzn.commonbaselib.views.AutoRadioGroup
        android:id="@+id/rgGroup"
        android:layout_width="match_parent"
        android:layout_height="83px"
        android:layout_marginBottom="17px"
        android:layout_marginLeft="109px"
        android:layout_marginRight="109px"
        android:layout_marginTop="17px"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_rarmer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_selector_left"
            android:button="@android:color/transparent"
            android:checked="true"
            android:gravity="center"
            android:text="我是农户"
            android:textColor="@drawable/main_tab_text_select"
            android:textSize="36px" />

        <RadioButton
            android:id="@+id/rb_driver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_selector_right"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="我是机手"
            android:textColor="@drawable/main_tab_text_select"
            android:textSize="36px" />

    </com.rzn.commonbaselib.views.AutoRadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="全部"
                android:textColor="@drawable/selector_word_color"
                android:textSize="18dp" />

            <View
                android:id="@+id/view_one"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#fb9300"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_work"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="待作业"
                android:textColor="@drawable/selector_word_color"
                android:textSize="18dp" />

            <View
                android:id="@+id/view_two"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#fb9300"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@drawable/selector_word_color"
                android:textSize="18dp" />

            <View
                android:id="@+id/view_three"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#fb9300"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.zhy.autolayout.AutoLinearLayout>