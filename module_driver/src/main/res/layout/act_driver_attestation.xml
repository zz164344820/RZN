<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F0F3F4"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--顶部标题-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="16.5dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_icon"
                    android:text="基本信息"
                    android:textColor="#333333"
                    android:textSize="16dp"
                    />

            </RelativeLayout>
            <!--信息填写布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                >
                <!--姓名-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="姓名:"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_width="266dp"
                        android:layout_height="36.5dp"
                        android:background="@drawable/shape_input_bg"
                        android:hint="必填"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <!--性别-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="性别:"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />

                    <RadioButton
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="17.5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(男)"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />

                    <RadioButton
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="46.5dp"
                        />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="17.5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(女)"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <!--省份证号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="身份证号:"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_width="266dp"
                        android:layout_height="36.5dp"
                        android:background="@drawable/shape_input_bg"
                        android:hint="必填"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <!--出生日期-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="出生日期:"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_width="266dp"
                        android:layout_height="36.5dp"
                        android:background="@drawable/shape_input_bg"
                        android:hint="必填"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <!--联系电话-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="联系电话:"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_width="266dp"
                        android:layout_height="36.5dp"
                        android:background="@drawable/shape_input_bg"
                        android:hint="必填"
                        android:textSize="16dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <!--职业技能-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <ImageView
                    android:id="@+id/iv_icons"
                    android:layout_width="16.5dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_icons"
                    android:text="职业技能"
                    android:textColor="#333333"
                    android:textSize="16dp"
                    />

            </RelativeLayout>
            <!--职业技能详细信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                >
                <!--作业类型-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="作业类型:"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_width="266dp"
                        android:layout_height="36.5dp"
                        android:background="@drawable/shape_input_bg"
                        android:hint="必填"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <!--从业时间-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="从业时间:"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <!--驾照照片-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="131.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViews"
                        android:layout_width="166.5dp"
                        android:layout_height="111.5dp"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:layout_width="166.5dp"
                        android:layout_height="111.5dp"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <!--农机信息-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <ImageViews
                    android:id="@+id/iv_iconss"
                    android:layout_width="16.5dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_iconss"
                    android:text="农机信息"
                    android:textColor="#333333"
                    android:textSize="16dp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                >
                <!--车型-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="车型:"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_width="266dp"
                        android:layout_height="36.5dp"
                        android:background="@drawable/shape_input_bg"
                        android:hint="必填"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <!--车牌号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="车牌号:"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_width="266dp"
                        android:layout_height="36.5dp"
                        android:background="@drawable/shape_input_bg"
                        android:hint="必填"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <!--所属合作社-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="51.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="所属合作社:"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        />

                    <EditText
                        android:layout_width="266dp"
                        android:layout_height="36.5dp"
                        android:background="@drawable/shape_input_bg"
                        android:hint="必填"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <!--上传的照片-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="131.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="166.5dp"
                        android:layout_height="111.5dp"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:layout_width="166.5dp"
                        android:layout_height="111.5dp"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加更多农机"
                    android:textColor="#333333"
                    android:textSize="18dp"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="341.5dp"
                android:layout_height="41.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="#70c63f"
                android:gravity="center"
                android:text="提交申请"
                android:textColor="#ffffff"
                android:textSize="18dp"
                />

        </LinearLayout>


    </ScrollView>
</LinearLayout>